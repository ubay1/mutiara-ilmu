// import back from '@icons/back.svg'
// import '@fontsource/homemade-apple'
// import '@fontsource-variable/rubik'
import "@styles/global.css";
import dayjs from "dayjs";

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Web pribadi, buat belajar aja" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <!-- <script src="/src/pwa.ts"></script> -->
    <!-- { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> } -->
  </head>
  <body class="m-auto text-[#ebe6e7]">
    <div class="p-0 m-auto h-56 md:h-72 relative bg-gray-800 lt-lg:p-0">
      <img
        src={frontmatter.imagePath}
        class="w-full h-full aspect-video object-cover brightness-30"
        alt=""
      />
      <div
        class="absolute top-0 flex justify-center items-center h-full w-full"
      >
        <h1 class="text-3xl z-40 line-clamp-2 font-bold text-center">
          {frontmatter.title}
        </h1>
      </div>
      <div class="absolute bottom-2 right-2 md:right-4">
        <div class="text-xs italic">
          Diterbitkan: {dayjs(frontmatter.date).format("DD MMMM YYYY")}
        </div>
      </div>
    </div>

    <div class="flex flex-col justify-center mb-8 px-4 break-words">
      <div class="my-4 flex items-center gap-2">
        {
          frontmatter.tags.map((tag: any) => (
            <a
              href={`/id/tags/${tag}`}
              class="bg-gray-900 p-2 rounded text-primary hover:bg-gray-800"
            >
              #{tag}
            </a>
          ))
        }
      </div>

      <slot />
    </div>
  </body>
</html>
